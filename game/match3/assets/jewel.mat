[material]
vert-shader = "#version 330 core
    in vec3 _pos; 
    in vec2 _uuv; 
    out vec2 fragCoord;
    uniform mat4 mmodel;
    uniform mat4 mprojection;
    void main()
    {
      gl_Position = mprojection * mmodel * vec4(_pos, 1.0);
      fragCoord = _uuv;
    }"

frag-shader = "#version 330 core
    in vec2 fragCoord;
    uniform sampler2D texture0;
    out vec4 out_color;
    void main()
    {
      vec4 solidColor = vec4(1.0, 1.0, 1.0, 1.0); 
      vec4 textureColor = texture(texture0, fragCoord);
      out_color = mix(solidColor, textureColor, 0.9);
    }"


#[textureN]
# path -> path to a bmp file
# u-wrap = {repeat | clamp-to-edge | mirrored-repeat}
# v-wrap = {repeat | clamp-to-edge | mirrored-repeat}
# min-filter = {linear | nearest | mipmap-linear-linear | mipmap-linear-nearest | mipmap-nearest-linear | mipmap-nearest-nearest}
# mag-filter = {linear | nearest | mipmap-linear-linear | mipmap-linear-nearest | mipmap-nearest-linear | mipmap-nearest-nearest}

# Specify the first texture for the material
[texture0]
path="assets/sprites.bmp"
u-wrap = "repeat" 
v-wrap = "repeat" 
min-filter = "linear"
mag-filter = "linear"
